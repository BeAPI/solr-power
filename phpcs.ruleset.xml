<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards for Plugins">
	<description>Generally-applicable sniffs for WordPress plugins</description>

	<rule ref="WordPress-Core" />
	<rule ref="WordPress-Docs" />

	<exclude-pattern>*/examples/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>
	<exclude-pattern>*/tests/*</exclude-pattern>
	<exclude-pattern>*/vendor/*</exclude-pattern>

	<exclude-pattern>*/includes/class-solrpower-api.php</exclude-pattern>
	<exclude-pattern>*/includes/class-solrpower-batch-index.php</exclude-pattern>
	<exclude-pattern>*/includes/class-solrpower-debug.php</exclude-pattern>
	<exclude-pattern>*/includes/class-solrpower-facet-widget.php</exclude-pattern>
	<exclude-pattern>*/includes/class-solrpower-options.php</exclude-pattern>
	<exclude-pattern>*/includes/class-solrpower-sync.php</exclude-pattern>
	<exclude-pattern>*/includes/class-solrpower-wp-query.php</exclude-pattern>
	<exclude-pattern>*/includes/legacy-functions.php</exclude-pattern>
	<exclude-pattern>*/template/s4w_search.php</exclude-pattern>
	<exclude-pattern>*/template/s4wp_search.php</exclude-pattern>

	<rule ref="Squiz.Commenting.FunctionComment.MissingParamTag">
		<exclude-pattern>*/includes/class-solrpower-cli.php</exclude-pattern>
	</rule>

	<rule ref="WordPress.Files.FileName.InvalidClassFileName">
		<exclude-pattern>*/tests/*</exclude-pattern>
	</rule>
</ruleset>
